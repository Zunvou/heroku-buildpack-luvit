#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e
set -o pipefail

LUVIT_VERSION="0.3.1"

BUILD_DIR=$1
CACHE_DIR=$2

cd $BUILD_DIR

LUVIT_URL="https://github.com/luvit/luvit-releases/raw/master/$LUVIT_VERSION/ubuntu11.10/x86_64/luvit-bundled/luvit"
echo "-----> Fetching Luvit version $LUVIT_VERSION"
curl --silent -O --max-time 60 --location "$LUVIT_URL"

chmod +x luvit

mkdir -p bin
mv luvit bin/luvit
PATH="$BUILD_DIR/bin:$PATH"
